<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/aSettingsButton"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:text="Settings"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="414dp" />

    <Button
        android:id="@+id/aUsersButton"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:text="Users"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="346dp" />

    <View
        android:id="@+id/coloredBox1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/burntOrange"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/welcomeTextView2"
        android:layout_width="382dp"
        android:layout_height="58dp"
        android:text="Administator"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/coloredBox1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/coloredBox1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/aMenuButton"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:text="Menu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="144dp" />

    <Button
        android:id="@+id/aKitchenButton"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:text="Kitchen"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="212dp" />

    <Button
        android:id="@+id/aTaproomButton"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:text="Taproom"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="279dp" />

    <Button
        android:id="@+id/aLogoutButton"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:text="Logout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="482dp" />

    <View
        android:id="@+id/coloredBox2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/burntOrange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>